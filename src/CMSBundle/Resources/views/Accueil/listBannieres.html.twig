{% extends 'base.html.twig' %}
{% block stylesheet %}
    {{ parent()}}
     <link rel="stylesheet" href="{{asset('GNUASSETS/plugins/datatables/dataTables.bootstrap.css')}}">
    
{% endblock%}

{% block content %}
    {{ parent()}}
     <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Gestion des banniéres
          </h1>
         
        </section>
        
    <section class="content">
        <div class="row">
            
              <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="panel panel-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Nouvelle banniére</h3>
                    </div><!-- /.box-header -->
                    <!-- form start -->

                    <form method="post" action="" role="form" enctype="multipart/form-data">
                        <div class="box-body">
            
                            <div class="form-group input-group col-md-12">
                                  <label>Titre</label>
                                {{ form_widget(form.titre, { 'attr': { 'class': 'form-control', 'placeholder': 'Titre'} }) }}
                                {{ form_errors(form.titre) }}
                            </div>
                            
                            <!-- img start -->
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="box box-success">

                                        <div id="id-box-body" class="box-body"> 

                                            {{ form_widget(form.image, { 'attr': {'placeholder': 'image'} }) }}
                                            {{ form_errors(form.image) }}                      

                                        </div><!-- /.box-body -->
                                    </div><!-- /.box -->
                                </div><!-- /.col -->
                            </div><!-- /.row -->
                            <!-- img end -->

                             
                              {{ form_rest(form) }}
                            <div>
                                <input class="btn  btn-default" type="submit" value="{{ 'Valider' }}">
                                <input class="btn  btn-default" type="reset" value="{{ 'Annuler' }}">          
                            </div>                  
                        </div>
                    </form>

                </div><!-- /.box -->
            </div><!--/.col (right) --> 
            
            
            
            
            
            
            
           <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Liste des banniéres</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example2" class="table table-striped table-bordered table-hover table-responsive">
                    <thead>
                      <tr>
                        <th>Titre</th>                              
                        <th>Banniére</th>
                        <th>Etat</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                       {% for banniere in bannieres %}
                            <tr>
                                <td>{{ banniere.titre }}</td>
                                <td>{{ banniere.etat }}</td>
                                <td>{{ banniere.etat }}</td>      
                                <td>
                                <a id="link" class="confirmModal" href="{{ path('delete_banniere',{id:banniere.id})}}"
                                   data-confirm-title="Supprimer l'hôtel" data-confirm-content="Etes-vous vraiment sûr?" data-confirm-yesBtn="Oui" data-confirm-noBtn="Non" >
                                <i class="fa fa-trash"></i>
                                </a>                                                                                                           
                                </td>
                            </tr>
                            {% endfor %}
                      </tbody>
          
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->
   

{% endblock %}



{% block javascript %}
    {{ parent()}}   
    <script src="{{asset('GNUASSETS/plugins/datatables/jquery.dataTables.min.js')}}"></script>
    <script src="{{asset('GNUASSETS/plugins/datatables/dataTables.bootstrap.min.js')}}"></script>
    <!-- delete confirmation -->
    <script type="text/javascript" src="{{asset('GNUASSETS/plugins/bootstrap-confirmation/jquery.popconfirm.js')}}"></script>
     <script>
        $(function () {

            $('#example2').DataTable({
                "order": [[0, "desc"]],
                "autoWidth": true,
                "responsive": true,
                "oLanguage": {
                    "sSearch": "Rechercher",
                    "sLengthMenu": "Afficher _MENU_ Par Page",
                    "sZeroRecords": "<center style=\"color:blue;\">Aucune banniére</center>",
                    "sInfo": "afficher _START_ à _END_ de _TOTAL_",
                    "sInfoEmpty": " ",
                    "sInfoFiltered": "(filtered from _MAX_ total )",
                    "oPaginate": {
                        "sFirst": "Premier",
                        "sLast": "LDernier",
                        "sNext": "Suivant",
                        "sPrevious": "Précédent"
                    }
                }
            });
            
         // delete confirmation
        $(".confirmModal").popConfirm();  
   
        });
    </script>
{% endblock%}
