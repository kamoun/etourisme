{% extends 'base.html.twig' %}
{% block stylesheet %}
    {{ parent()}}
     <link rel="stylesheet" href="{{asset('GNUASSETS/plugins/datatables/dataTables.bootstrap.css')}}">
    
{% endblock%}

{% block content %}
    {{ parent()}}
    <section class="content-header">
        <h1>

            Gestion Utilisateurs

        </h1>
    </section>
     
    
     <div class="row">
        <div class="col-lg-12  ">

        <div class="panel panel-primary">
            <div class="panel-heading">

                <span ><i style="float: left;" class="fa fa-user"></i></span> <center>Liste des utilisateurs</center>


            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table  id="example2" class="table table-striped table-bordered table-hover table-responsive" >
                        <thead>
                            <tr>
                                <th>Id</th>
                               
                                <th>Email</th>
                                <th>Pseudo</th>
                               
                                

                                <th>Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.username }}</td>
                                    
                                   
                                    <td>
                                        <a  class="confirmModal"   href="{{ path('delete_user',{id:user.id})}}"   title="Supprimer  Cet Utilisateur"><i class="fa fa-trash"></i></a>
                                        <a  class="confirmModal"   href="{{ path('edit_user',{id:user.id})}}"  title="Modifier  Cet Utilisateur"><i class="fa fa-edit"></i></a>
                                        
                                        
                                    </td>

                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
                <!-- /.col-lg-6 (nested) -->
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
        </div>
     </div>
   

{% endblock %}



{% block javascript %}
    {{ parent()}}
     <!-- jQuery 2.1.4 -->
        <script src="{{asset('GNUASSETS/plugins/jQuery/jQuery-2.1.4.min.js')}}"></script>
    <script src="{{asset('GNUASSETS/plugins/datatables/jquery.dataTables.min.js')}}"></script>
    <script src="{{asset('GNUASSETS/plugins/datatables/dataTables.bootstrap.min.js')}}"></script>
     <script>
        $(function () {

            $('#example2').DataTable({
                "order": [[0, "desc"]],
                "autoWidth": true,
                "responsive": true,
                "oLanguage": {
                    "sSearch": "Rechercher",
                    "sLengthMenu": "Afficher _MENU_ Par Page",
                    "sZeroRecords": "<center style=\"color:blue;\">Vous N avez aucun utilisateur</center>",
                    "sInfo": "afficher _START_ à _END_ de _TOTAL_",
                    "sInfoEmpty": " ",
                    "sInfoFiltered": "(filtered from _MAX_ total )",
                    "oPaginate": {
                        "sFirst": "Premier",
                        "sLast": "LDernier",
                        "sNext": "Suivant",
                        "sPrevious": "Précédent"
                    }
                }
            });
        });
    </script>
{% endblock%}
