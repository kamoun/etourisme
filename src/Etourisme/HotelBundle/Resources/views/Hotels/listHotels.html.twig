{% extends 'base.html.twig' %}
{% block stylesheet %}
    {{ parent()}}
     <link rel="stylesheet" href="{{asset('GNUASSETS/plugins/datatables/dataTables.bootstrap.css')}}">
    
{% endblock%}

{% block content %}
    {{ parent()}}
     <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Gestion des hôtels
          </h1>
         
        </section>
        
    <section class="content">
        <div class="row">
           <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Liste des hôtels</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example2" class="table table-striped table-bordered table-hover table-responsive">
                    <thead>
                      <tr>
                        <th>Nom</th>                              
                        <th>Ville</th>
                        <th>Promotion</th>
                        <th>Description</th>
                        <th>Détails</th>
                        <th>Catégorie</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                       {% for hotel in hotels %}
                            <tr>
                                <td>{{ hotel.nomHotel }}</td>
                                <td>{{ hotel.ville }}</td>
                                <td>{{ hotel.promotion }}</td>
                                <td>{{ hotel.descrip }}</td>
                                <td>{{ hotel.details }}</td>
                                <td>{{ hotel.categorie }}</td>
                              
                              
                            <td>
                                <a  class="confirmModal"   href="{{ path('delete_hotel',{id:hotel.id})}}"   title="Supprimer l'hôtel"><i class="fa fa-trash"></i></a>
                                <a  class="confirmModal"   href="{{ path('edit_hotel',{id:hotel.id})}}"  title="Modifier l'hôtel"><i class="fa fa-edit"></i></a>                                                                             
                            </td>
                                </tr>
                            {% endfor %}
                      </tbody>
          
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->
   

{% endblock %}



{% block javascript %}
    {{ parent()}}   
    <script src="{{asset('GNUASSETS/plugins/datatables/jquery.dataTables.min.js')}}"></script>
    <script src="{{asset('GNUASSETS/plugins/datatables/dataTables.bootstrap.min.js')}}"></script>
     <script>
        $(function () {

            $('#example2').DataTable({
                "order": [[0, "desc"]],
                "autoWidth": true,
                "responsive": true,
                "oLanguage": {
                    "sSearch": "Rechercher",
                    "sLengthMenu": "Afficher _MENU_ Par Page",
                    "sZeroRecords": "<center style=\"color:blue;\">Vous N avez aucun utilisateur</center>",
                    "sInfo": "afficher _START_ à _END_ de _TOTAL_",
                    "sInfoEmpty": " ",
                    "sInfoFiltered": "(filtered from _MAX_ total )",
                    "oPaginate": {
                        "sFirst": "Premier",
                        "sLast": "LDernier",
                        "sNext": "Suivant",
                        "sPrevious": "Précédent"
                    }
                }
            });
        });
    </script>
{% endblock%}
