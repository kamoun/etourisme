{% extends 'base.html.twig' %}
{% block stylesheet %}
    {{ parent()}}
     <link rel="stylesheet" href="{{asset('GNUASSETS/plugins/datatables/dataTables.bootstrap.css')}}">
    
{% endblock%}

{% block content %}
    {{ parent()}}
     <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Gestion des tarifs
          </h1>
         
        </section>
        
    <section class="content">
        <div class="row">
           <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Liste des tarifs</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example2" class="table table-striped table-bordered table-hover table-responsive">
                    <thead>
                      <tr>
                      <th>Nom</th>                              
                        <th>Ville</th>
                        <th>Date du</th>
                        <th>au</th>
                        <th>Option</th>
                        
                      </tr>
                    </thead>
                    <tbody>
                       
                       {% for tarif in tarifs %}
                            <tr>
                                <td>{{ tarif.hotel.nomHotel }}</td>
                                <td>{{ tarif.hotel.ville }}</td>
                                <td>{{ tarif.tempsd|date("m/d/Y")  }}</td>
                                <td>{{ tarif.tempsf|date("m/d/Y")  }}</td> 
                                
                              
                            <td>
                                <a  class="confirmModalModif" href="{{ path('edit_tarif',{id:tarif.id})}}"  title="Modifier l'hôtel"><i class="fa fa-edit"></i></a>
                                <a id="link" class="confirmModal" href="" data-confirm-title="Supprimer l'hôtel" data-confirm-content="Etes-vous vraiment sûr?" data-confirm-yesBtn="Oui" data-confirm-noBtn="Non" >
                                <i class="fa fa-trash"></i>
                                </a>                                                                                                           
                            </td>
                                </tr>
                            {% endfor %}
                      </tbody>
          
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->
   

{% endblock %}



{% block javascript %}
    {{ parent()}}   
    <script src="{{asset('GNUASSETS/plugins/datatables/jquery.dataTables.min.js')}}"></script>
    <script src="{{asset('GNUASSETS/plugins/datatables/dataTables.bootstrap.min.js')}}"></script>
    <!-- delete confirmation -->
    <script type="text/javascript" src="{{asset('GNUASSETS/plugins/bootstrap-confirmation/jquery.popconfirm.js')}}"></script>
     <script>
        $(function () {

            $('#example2').DataTable({
                "order": [[0, "desc"]],
                "autoWidth": true,
                "responsive": true,
                "oLanguage": {
                    "sSearch": "Rechercher",
                    "sLengthMenu": "Afficher _MENU_ Par Page",
                    "sZeroRecords": "<center style=\"color:blue;\">Pas de tarifs</center>",
                    "sInfo": "afficher _START_ à _END_ de _TOTAL_",
                    "sInfoEmpty": " ",
                    "sInfoFiltered": "(filtered from _MAX_ total )",
                    "oPaginate": {
                        "sFirst": "Premier",
                        "sLast": "LDernier",
                        "sNext": "Suivant",
                        "sPrevious": "Précédent"
                    }
                }
            });
            
         // delete confirmation
        $(".confirmModal").popConfirm();  
   
        });
    </script>
{% endblock%}
